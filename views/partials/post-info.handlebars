<article class="post">
  <div class="title">
    <a href="{{title}}" target="_blank">{{title}}</a>
    <span>...by {{user.username}}  on {{format_date created_at}}</span>
  </div>
   <div class="content">
    <a href="{{post_content}}" target="_blank">{{content}}</a>
    <span>{{post.content}}</span>
  </div>
  <div class="meta">
    {{!-- {{vote_count}} {{format_plural "point" vote_count}}
    | --}}
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>

