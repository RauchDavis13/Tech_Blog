<article class="post">
  <div class="title meta">
    <a href="{{post.title}}" target="_blank">{{post.title}}</a>
    {{post.user.username}} on {{post.created_at}}
  </div>
  <div class="content">
    {{!-- <a href="{{post.content}}" target="_blank">{{post.content}}</a> --}}
    <span>({{post.content}})</span>
  </div>
  <div class="meta">
    {{!-- {{post.vote_count}} point(s) by {{post.user.username}} on
    {{post.created_at}}
    | --}}
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

